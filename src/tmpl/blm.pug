doctype html
html(lang='en', prefix='og: http://ogp.me/ns#', itemscope, itemtype='http://schema.org/WebPage')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')

    - var pageTitle = (locals.title ? locals.title + ' - ' : '') + 'Grunt: The JavaScript Task Runner';
    title= pageTitle
    link(rel='stylesheet', href='https://fonts.googleapis.com/css?family=Lato:400,700')
    link(rel='stylesheet', href='/css/main.css')
    include includes/favicons
    include includes/social
    link(href='/rss', rel='alternate', title='Grunt Blog Feed', type='application/atom+xml')
  body(class=locals.page ? 'page-' + locals.page + (locals.page === 'index' ? '' : ' page-secondary') : '')
    .navbar.navbar-inverse
      .navbar-inner
        .container
          .nav-collapse.collapse.blm
            a.home(href='/')
              span.logo
              span.brand GRUNT
            ul.nav
              li
                a(href='/getting-started')
                  i.icon-arrow-right
                  span Getting Started
              li
                a(href='/configuring-tasks')
                  i.icon-cog
                  span Configuring Tasks
              li
                a(href='/plugins')
                  i.icon-power-cord
                  span Plugins
              li
                a(href='/getting-started')
                  i.icon-file-text
                  span Documentation
            form.navbar-search.pull-right
              input.search-query(type='text', placeholder='Search')
