extends layout

block content
  .container
    .row-fluid
      .span12.page
        .hero-unit
          .plugin-unit
            h1 Plugins
            != content
          section.main
            .plugin-list#plugins-contrib
            table.plugin-list#plugins-all.display(cellspacing='0', width='100%')
              thead
                tr
                  th.colPlugin
